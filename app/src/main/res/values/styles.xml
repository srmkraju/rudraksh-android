<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bold">
        <item name="font_name">fonts/OpenSans-Bold</item>
    </style>

    <style name="semi_bold">
        <item name="font_name">fonts/OpenSans-Semibold</item>
    </style>

    <style name="extra_bold">
        <item name="font_name">fonts/OpenSans-ExtraBold</item>
    </style>

    <style name="regular">
        <item name="font_name">fonts/OpenSans-Regular</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_min_height</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


</resources>
