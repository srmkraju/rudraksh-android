<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_main_recycler_cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_fifty_dp"
    android:layout_marginEnd="@dimen/ten_dp"
    android:layout_marginStart="@dimen/ten_dp"
    android:layout_marginTop="@dimen/ten_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_drawable">

        <com.rudraksh.food.widgets.AppImageView
            android:id="@+id/fragment_food_name_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"/>

        <com.rudraksh.food.widgets.AppTextView
            android:id="@+id/fragment_food_name_tv"
            style="@style/semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/gujarati_food"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

