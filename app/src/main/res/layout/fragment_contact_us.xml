<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.rudraksh.food.widgets.AppTextView
            style="@style/extra_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:gravity="center"
            android:text="@string/rudraksh"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_four_sp" />

        <com.rudraksh.food.widgets.AppTextView
            style="@style/semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:gravity="center"
            android:text="@string/food_service"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/twenty_dp"
            app:cardElevation="@dimen/five_dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rudraksh.food.widgets.AppButton
                    android:id="@+id/frament_contact_btn_mukesh"
                    style="@style/semi_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_dp"
                    android:layout_centerInParent="true"
                    android:background="@color/green"
                    android:drawableStart="@drawable/ic_phone"
                    android:paddingStart="@dimen/twenty_dp"
                    android:text="@string/mukesh_bhai"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen_sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/twenty_dp"
            app:cardElevation="@dimen/five_dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rudraksh.food.widgets.AppButton
                    android:id="@+id/frament_contact_btn_naresh"
                    style="@style/semi_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_dp"
                    android:layout_centerInParent="true"
                    android:background="@color/green"
                    android:drawableStart="@drawable/ic_phone"
                    android:paddingStart="@dimen/twenty_dp"
                    android:text="@string/naresh_bhai"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen_sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <com.rudraksh.food.widgets.AppEditText
            android:id="@+id/fragment_contact_edt_feedback"
            style="@style/semi_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:background="@drawable/edit_text_border"
            android:hint="@string/feedback"
            android:padding="@dimen/twenty_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rudraksh.food.widgets.AppButton
                android:id="@+id/fragment_contact_btn_submit"
                style="@style/semi_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/green"
                android:text="@string/submit"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
